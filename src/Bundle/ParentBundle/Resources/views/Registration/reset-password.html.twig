{% extends 'BundleKidskulaBundle:Layout:base.html.twig' %}
 {% block content %} 
<div class="landingheading-top"> 
    Reset Password
</div>

        {% block flash %}
<div class="row" style="padding-top: 10px;">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">                
   {% for flashSuccessMessage in app.session.flashbag.get('success') %} 
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    {{ flashSuccessMessage }}
        </div>
            {% endfor %}
            {% for flashErrorMessage in app.session.flashbag.get('error') %}  
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    {{ flashErrorMessage }}
        </div>
            {% endfor %} 
    </div>
</div>
        {% endblock %}
<div class="container">

    <div class="row" id="loginform" >
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="form" method="post" class="registrationform-main" action="{{path('fornt_forgot_passowrd_link', { 'token': token })}}">

                <div class="reg-frm-space"> </div>

                <div class="form-group">
                    {{ form_widget(form.password.first) }}
                    {{ form_errors(form.password.first) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.password.second) }}
                    {{ form_errors(form.password.second) }}
                </div>
                {{ form_widget(form._token) }}
                <div class="reg-frm-space"> </div>

                <div class="row">
                    <div class="col-xs-12 col-md-12"><input type="submit" class="btn btn-success btn-block btn-lg searchfriendbtn" value="Reset"></div>
                </div>
            </form>
        </div>
    </div>


</div>

<!--container ends-->
 {% endblock  %}
