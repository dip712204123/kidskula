    <body class="login">
	<!-- BEGIN LOGO -->
	<div class="logo">
		<img src="{{asset('bundles/BundleAdmin/assets')}}/img/logo.png" alt="Kidskula logo" width="200" height="100" />
	</div>
	<!-- END LOGO -->
	<!-- BEGIN LOGIN -->
	<div class="content">
		<!-- BEGIN LOGIN FORM -->
                {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                <div class="alert alert-error flash-{{ type }}">
                    <button class="close" data-dismiss="alert"></button>
                    {{ message }}
                </div>
                {% endfor %}
                {% endfor %}
		<form class="form-vertical login-form" action="{{ path("bundle_admin_logincheck") }}" method="post">
                    
			<h3 class="form-title">Login to your account</h3>
			<div class="alert alert-error hide">
				<button class="close" data-dismiss="alert"></button>
				<span>Enter any username and password.</span>
			</div>
			<div class="control-group">
				<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
				<label class="control-label visible-ie8 visible-ie9">Username</label>
				<div class="controls">
					<div class="input-icon left">
						<i class="icon-user"></i>
                                                 <input class="m-wrap placeholder-no-fix" placeholder="Username" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
						
					</div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label visible-ie8 visible-ie9">Password</label>
				<div class="controls">
					<div class="input-icon left">
						<i class="icon-lock"></i>
                                                  <input class="m-wrap placeholder-no-fix" placeholder="Password" type="password" id="password" name="_password" required="required" />
						
					</div>
				</div>
			</div>
			<div class="form-actions">
				<label class="checkbox">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />Remember me
				
				</label>
{#                             <input type="submit" id="_submit" name="_submit" value="{{ 'submit'|trans }}" />
#}				<button type="submit" class="btn blue pull-right" id="_submit" name="_submit">
				Login <i class="m-icon-swapright m-icon-white"></i>
				</button>            
			</div>
			<div class="forget-password">
				<h4>Forgot your password ?</h4>
				<p>
					no worries, click <a href="javascript:;"  id="forget-password">here</a>
					to reset your password.
				</p>
			</div>
			
		</form>
		<!-- END LOGIN FORM -->        
		
	</div>
	<!-- END LOGIN -->
	<!-- BEGIN COPYRIGHT -->
	<div class="copyright">
		2014 &copy; Kidskula - Admin Dashboard.
	</div>
	<!-- END COPYRIGHT -->
	
</body>
{% endblock fos_user_content %}
