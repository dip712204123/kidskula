            data: form_data,
            success: function(response) {
                // alert(response.msg);

                if (response.status != 0) {
                    $("#addfriendbtn").hide('slow');
                    $("#addfrienddiv").html(response.msg);
                    
                }
                else
                {
                    //$("#addfrienddiv").html('Not saved');
                    return false
                    

                }

            }
        });
    }
    
