<script>
    function addfriend()
    {


        var path = "{{path('addfriend')}}";
        var friendId =$('#friendId').val();
       // alert (friendId);
        // alert(deactivate);
        var form_data = {
            friendId: friendId

        };

        $.ajax({
            type: "POST",
